CREATE TABLE IF NOT EXISTS CHATROOM (id INTEGER NOT NULL UNIQUE, name TEXT NOT NULL, imageUrl TEXT NOT NULL, groupType INTEGER NOT NULL, groupId TEXT DEFAULT NULL, message TEXT, type INTEGER, time NUMERIC, lastestMessageId INTEGER NOT NULL DEFAULT 0, unread INTEGER NOT NULL DEFAULT 0);
CREATE TABLE IF NOT EXISTS CHATROOM_USER (chatroomId INTEGER NOT NULL, memberId TEXT NOT NULL, name TEXT NOT NULL, imageUrl TEXT NOT NULL, isDelete NUMERIC NOT NULL DEFAULT 0);
CREATE TABLE IF NOT EXISTS CHAT_MESSAGE (id INTEGER NOT NULL, chatroomId  INTEGER NOT NULL, message TEXT NOT NULL, type INTEGER NOT NULL, sender TEXT NOT NULL, createTime INTEGER NOT NULL);
CREATE TABLE IF NOT EXISTS USER_GROUP(id TEXT NOT NULL UNIQUE, groupName TEXT NOT NULL, createTime NUMERIC NOT NULL, imageUrl TEXT NOT NULL, name TEXT NOT NULL, totalPeople INTEGER NOT NULL DEFAULT 0, type INTEGER NOT NULL, groupType INTEGER NOT NULL);
CREATE TABLE IF NOT EXISTS CHAT_STICKER_GROUP(id INTEGER NOT NULL UNIQUE, imagePath TEXT NOT NULL, [order] INTEGER NOT NULL);
CREATE TABLE IF NOT EXISTS CHAT_STICKER(id INTEGER NOT NULL UNIQUE, groupId INTEGER NOT NULL, imagePath TEXT NOT NULL);
CREATE TABLE IF NOT EXISTS CHAT_STICKER_HISTORY(stickerId INTEGER NOT NULL UNIQUE, updateTime INTEGER NOT NULL);
CREATE TABLE IF NOT EXISTS CHAT_EXTRA_FEATURE(id INTEGER NOT NULL UNIQUE, type TEXT NOT NULL, [order] INTEGER NOT NULL, isDelete NUMERIC NOT NULL DEFAULT 0);
CREATE TABLE IF NOT EXISTS CHAT_RED_ENVELOPE_RECEIVED(id INTEGER NOT NULL UNIQUE);
CREATE UNIQUE INDEX idx_chatroomid_memberid ON CHATROOM_USER(chatroomId, memberId);
CREATE UNIQUE INDEX idx_messageid ON CHAT_MESSAGE(id);
CREATE INDEX idx_chatroomid ON CHAT_MESSAGE(chatroomId);
CREATE INDEX idx_groupid ON CHAT_STICKER(groupId);
